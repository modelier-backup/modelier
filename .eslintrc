{
  "extends": "eslint:recommended",
  "env": {
    "es6":   true,
    "node":  true,
    "mocha": true
  },
  "globals": {
    "expect": true
  },
  "parserOptions": {
    "ecmaVersion": 8
  },
  "rules": {
    "indent": [2, 2],
    "linebreak-style": [2,"unix"],
    "semi": [2,"always"],
    "no-console" : [0]
  }
}
